                                        li(class="navigation__forth")
                                            a(href="cards-connect.html#cards-connect-submit").navigation__forth-link Отправка данных о 3DS в эквайер

                                li.navigation__third
                                    a(href="cards-cancel.html").navigation__third-link Отмена подписки
                                    ul.navigation__forth-wrap
                                        li.navigation__forth
                                            a(href="cards-cancel.html#cards-cancel-request").navigation__forth-link Запрос
                                        li.navigation__forth
                                            a(href="cards-cancel.html#cards-cancel-response").navigation__forth-link Ответ

